<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="ShaderImageView">
        <attr format="boolean" name="siSquare"/>
        <attr format="color" name="siBorderColor"/>
        <attr format="dimension" name="siBorderWidth"/>
        <attr format="float" name="siBorderAlpha"/>
        <attr format="integer|reference" name="siForeground"/>
        <attr format="dimension" name="siRadius"/>
        <attr name="siArrowPosition"/>
        <attr format="dimension" name="siTriangleHeight"/>
        <attr format="integer|reference" name="siShape"/>
        <attr name="siBorderType"/><attr name="siStrokeCap"/>
        <attr name="siStrokeJoin"/>
        <attr format="dimension" name="siStrokeMiter"/>
    </declare-styleable>
    <declare-styleable name="RoundedBorderImageView">
        <attr format="dimension" name="left_top_corner_radius"/>
        <attr format="dimension" name="right_top_corner_radius"/>
        <attr format="dimension" name="left_bottom_corner_radius"/>
        <attr format="dimension" name="right_bottom_corner_radius"/>
        <attr format="dimension" name="border_width"/>
        <attr format="color" name="border_color"/>
        <attr format="boolean" name="oval"/>
        <attr name="android:scaleType"/>
    </declare-styleable>
</resources>

